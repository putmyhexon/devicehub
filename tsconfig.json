{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "checkJs": true,
    "allowJs": true,
    "noEmit": false,
    "declaration": false,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "rewriteRelativeImportExtensions": true,
    "lib": ["ES2022", "DOM"],
    "types": ["node"]
  },
  "include": [
    "./lib/**/*.js",
    "./lib/**/*.mjs",
    "./lib/types/**/*.d.ts",
    "./lib/**/*.ts"
  ],
  "exclude": ["node_modules/**"],
  "verbose": true
}
